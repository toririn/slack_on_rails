<h2>
【<%= @channel_name %>】の今日のタスク状況
<a class="small" href="/todo_work/<%= @channel_name %>">更新する</a>
</h2>
  <div class="col-sm-4">
    <table class = "table table-bordered table-hover table-condensed">
      <thead>
        <tr class="bg-primary">
          <th>
            No
          </th>
          <th>
            todo
          </th>
        </tr>
      </thead>
      <tbody>
      <% @todo_list.each.with_index(1) do |todo, idx| %>
        <tr class="<%= cycle('bg-success', 'bg-warning') %>">
          <td>
            <%= idx %><br />
          </td>
          <td >
            <%= work_by (@slack_markdown_processor.call(todo[0])[:output].to_s.html_safe) %>
            <br />
            <span class="small text-muted"><%= time_by(todo[1]) %></span>
          </td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </div>
  <div class="col-sm-4">
    <table class = "table table-bordered table-hover table-condensed">
      <thead>
        <tr class="bg-primary">
          <th>
            No
          </th>
          <th>
            do
          </th>
        </tr>
      </thead>
      <tbody>
      <% @do_list.each.with_index(1) do |list, idx| %>
        <tr class="<%= cycle('bg-success', 'bg-warning') %>">
          <td>
            <%= idx %><br />
          </td>
          <td >
            <%= work_by (@slack_markdown_processor.call(list[0])[:output].to_s.html_safe) %>
            <br />
            <span class="small text-muted"><%= time_by(list[1]) %></span>
          </td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </div>
  <div class="col-sm-4">
    <table class = "table table-bordered table-hover table-condensed">
      <thead>
        <tr class="bg-primary">
          <th>
            No
          </th>
          <th>
            done
          </th>
          <th>
            経過時間
          </th>
        </tr>
      </thead>
      <tbody>
      <% @done_list.each.with_index(1) do |list, idx| %>
        <tr class="<%= cycle('bg-success', 'bg-warning') %>">
          <td>
            <%= idx %><br />
          </td>
          <td >
            <%= work_by(@slack_markdown_processor.call(list[0])[:output].to_s.html_safe) %>
            <br />
            <span class="small text-muted"><%= time_by(list[1]) %></span>
          </td>
          <td>
            <%= doing_time(list, @do_list) %> 
          </td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </div>
  <div class="col-sm-12">
    <table class = "table table-bordered table-hover table-condensed">
      <thead>
        <tr class="bg-primary">
          <th>
            No
          </th>
          <th>
            今日のタスクへのコメント欄
          </th>
        </tr>
      </thead>
      <tbody>
      <% @comment_list.each.with_index(1) do |list, idx| %>
        <tr class="<%= cycle('bg-success', 'bg-warning') %>">
          <td>
            <%= idx %><br />
          </td>
          <td >
            <%= work_by(@slack_markdown_processor.call(list[0])[:output].to_s.html_safe) %>
            <br />
            <span class="small text-muted"><%= time_by(list[1]) %></span>
          </td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </div>
