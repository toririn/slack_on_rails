<table class = "table table-bordered table-hover table-condensed">
  <thead>
    <tr class="bg-primary">
      <th>
        No
      </th>
      <th>
        あなたのチェックリスト
      </th>
    </tr>
  </thead>
  <tbody>
    <% check_list.each.with_index(1) do |chat, idx| %>
      <tr class="<%= cycle('bg-success', 'bg-warning') %>">
        <td>
          <%= idx %><br />
        </td>
        <td >
          <%= @slack_markdown_processor.call(chat[:text])[:output].to_s.html_safe %>
          <br />
          <span class="small text-muted"><%= time_by(chat[:ts]) %></span>
          <a href="<%= chat[:permalink] %>">発言元</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
