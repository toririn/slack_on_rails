<% if results %>
  <h2>検索結果</h2>
  <%= form_tag('/save', method: :post) do %>
    <table class = "table table-striped table-bordered">
      <thead>
        <tr>
          <th>
            No
          </th>
          <th>
            Info
          </th>
          <th>
            Chat
          </th>
        </tr>
      </thead>
      <tbody>
    <% extract_for_table(results).each.with_index(1) do |result, idx| %>
      <tr>
        <td>
          <%= idx %><br />
          <%= check_box_tag("check_#{idx}", "check_#{idx}", false, {}) %>
        </td>
        <td>
          #<%= result[1] %><br />
          <%= result[3] %><br />
          <img src="<%= user_image_list[result[3]] %>" />
        </td>
        <td>
          <a href="<%= result[5] %>"><%= result[4] %></a>
        </td>
      </tr>
    <% end %>
      </tbody>
    </table>
    <%= submit_tag('保存', class: "btn btn-info") %>
    <%= submit_tag('loadge出力', class: "btn btn-success") %>
  <% end %>
<% end %>
